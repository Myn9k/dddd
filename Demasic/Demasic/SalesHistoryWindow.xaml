<Window x:Class="Demasic.SalesHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demasic"
        mc:Ignorable="d"
                Title="История продаж" Height="450" Width="800" Icon="/Resource/icon.ico">
    <Grid>
        <ListBox ItemsSource="{Binding Sales}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="10">
                        <StackPanel>
                            <TextBlock Text="{Binding ProductName}" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
                            <DockPanel LastChildFill="True">
                                <TextBlock Text="{Binding SaleDate, StringFormat='Дата продажи: {0:d}'}" FontSize="16" Foreground="Gray" DockPanel.Dock="Left"/>
                                <TextBlock Text="{Binding Amount, StringFormat='Сумма: {0:C}'}" FontSize="16" HorizontalAlignment="Right"/>
                            </DockPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>